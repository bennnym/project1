<!DOCTYPE html>
<html>
  <head>
    <title>NBCray</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <%= link_to 'Home', root_path %>
    <% if @current_user.present? %>
    <%= link_to "Team Page", team_path %>
        <%= link_to "Sign Out", login_path, :method => 'delete' %>
        
        <% else %>
    <%= link_to 'Sign up', new_user_path %>
    <%= link_to 'Login', login_path %>
    <% end %>
    </nav>
    
    <div class="scores">
      <% @games.each_with_index do |game, index| %>
      <div class="single-score">
        <div class="teams">
      <%= image_tag @images[index][0], :class => 'thumb' %><p class="team-name">  <%= game.home_team %>  <span><%= game.home_score %></span> </p>
      </div>
      <div class="teams">
      <%= image_tag @images[index][1], :class => 'thumb' %><p class="team-name"> <%= game.away_team %>  <span><%= game.away_score %></span> </p>
      </div>
      </div>
      
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
